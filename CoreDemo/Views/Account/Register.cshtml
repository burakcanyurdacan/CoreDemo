@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<style>
    .field-validation-error {
        background-color: #cc1a1a;
        color: white;
        padding: 3px 10px;
        border-radius: 4px;
        font-size: .8em;
    }
</style>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad - Soyad</label>
                            @*<input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterName)
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Posta</label>
                            @*<input type="text" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterMail)
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre Doğrula</label>
                            @*<input type="text" class="form-control" name="WriterImg" id="password2" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterImg, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterImg)
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kaydol</button>
                    <p>
                        <a href="#">Kullanım koşullarını okudum, onaylıyorum.</a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>