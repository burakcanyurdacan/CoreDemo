@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="align-middle">@item.CategoryId</td>
            <td class="align-middle">@item.CategoryName</td>
            <td class="align-middle">@item.CategoryStatus</td>
            <td class="align-middle"><a href="#" class="btn btn-success">Detaylar</a></td>
            <td class="align-middle"><a href="#" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>