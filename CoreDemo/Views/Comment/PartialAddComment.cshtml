<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        <form action="/Comment/PartialAddComment/" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Ad Soyad" required="">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Başlık" required="">

            <textarea class="form-control" name="CommentContent" placeholder="Mesajınızı buraya yazın..." required="" rows="7"></textarea>
            <button type="submit" class="btn btn-primary submit">Gönder</button>
        </form>
    </div>
</div>

<script>
    var btn = document.getElementsByClassName("submit");
    $(btn).click(function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialAddComment","Comment")",
            dataType: "json",
            cache: false,
            success: function () {
                window.location.url("/Blog/BlogDetails/@ViewBag.BlogId")
            }
        });
    });
</script>